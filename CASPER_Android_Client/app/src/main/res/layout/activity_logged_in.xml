<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group1.com.casper_android_client.LoggedIn"
    android:background="#000000"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/username"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_above="@+id/thepassword"
        android:layout_alignLeft="@+id/thepassword"
        android:layout_alignStart="@+id/thepassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/thepassword"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="@string/BackButton"
        android:id="@+id/backButton"
        android:background="#2DEF96"
        android:onClick="backButton"
        android:layout_below="@+id/thepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />
</RelativeLayout>
