<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoStreamActivity"
    android:background="#afafaf">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoStream"
            android:background="#6969"
            android:scaleType="fitXY"
            android:src="#d7c5c5" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:id="@+id/mapView"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#666" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/layout_joystick"
        android:nestedScrollingEnabled="true"
        android:background="@drawable/image_button_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp">

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pointer"
        android:src="@drawable/pointer"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/getVideo"
        android:id="@+id/request"
        android:background="#2DEF96"
        android:visibility="visible"
        android:layout_gravity="center_horizontal|top"
        android:onClick="killSwitch"
        android:nestedScrollingEnabled="false"
        android:layout_toStartOf="@+id/fixedValue"
        android:layout_alignRight="@+id/fixedValue"
        android:layout_alignEnd="@+id/fixedValue"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fixed intevalles"
        android:id="@+id/fixedValue"
        android:checked="false"
        android:textColor="#ffffff"
        android:onClick="onFixed"
        android:visibility="visible"
        android:layout_alignLeft="@+id/layout_joystick"
        android:layout_alignStart="@+id/layout_joystick" />

</RelativeLayout>
